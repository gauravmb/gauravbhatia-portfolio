{
  "name": "portfolio-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next export",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "test:run": "jest",
    "test:coverage": "jest --coverage",
    "emulators": "firebase emulators:start",
    "docker:build": "docker build -t portfolio-website .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local portfolio-website",
    "docker:test": "npm run docker:build && npm run docker:run",
    "deploy:build": "gcloud builds submit --config cloudbuild.yaml",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy": "npm run deploy:build && npm run deploy:hosting",
    "create-admin": "node scripts/create-admin-user.js",
    "clear-cache": "node scripts/clear-cache.js",
    "setup-production": "bash scripts/setup-production.sh",
    "setup-gcloud": "bash scripts/setup-gcloud-prerequisites.sh",
    "setup-monitoring": "bash scripts/setup-monitoring.sh",
    "verify:staging": "node scripts/verify-staging-deployment.js",
    "verify:local": "STAGING_URL=http://localhost:3000 node scripts/verify-staging-deployment.js",
    "verify:cloudrun": "STAGING_URL=$(gcloud run services describe portfolio-website --region=us-central1 --format='value(status.url)' 2>/dev/null) node scripts/verify-staging-deployment.js"
  },
  "dependencies": {
    "firebase": "^10.12.0",
    "firebase-admin": "^12.1.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-hook-form": "^7.51.0",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.0",
    "@testing-library/react": "^15.0.0",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/supertest": "^6.0.2",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "fast-check": "^3.17.0",
    "firebase-tools": "^13.7.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "js-yaml": "^4.1.1",
    "postcss": "^8.4.0",
    "prettier": "^3.2.0",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0"
  }
}
